{
    "name": "invoify",
    "version": "0.1.0",
    "private": true,
    "main": "electron/main-simple.js",
    "homepage": "./",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "build:standalone": "next build",
        "start": "next start",
        "lint": "next lint",
        "analyze": "cross-env ANALYZE=true next build",
        "seed": "node scripts/seedFromJson.js",
        "seed-chitfund": "tsx scripts/seed.ts",
        "add-admin": "tsx scripts/add-admin.ts",
        "electron": "electron .",
        "electron:dev": "concurrently \"npm run dev\" \"cross-env NODE_ENV=development electron .\"",
        "electron:build": "npm run build:standalone && electron-builder --win --x64 --publish=never",
        "electron:build:all": "npm run build:standalone && electron-builder -mwl --publish=never",
        "build:windows": "npm run build:standalone && electron-builder --win --x64",
        "build:windows:portable": "npm run build:standalone && electron-builder --win portable",
        "build:app": "npm run build:standalone && electron-builder --publish=never",
        "bridge": "node scripts/bridge-simple.js",
        "bridge:dev": "nodemon scripts/bridge-simple.js",
        "dev:all": "concurrently \"npm run dev\" \"npm run bridge\""
    },
    "dependencies": {
        "@dnd-kit/core": "^6.1.0",
        "@dnd-kit/sortable": "^8.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@hookform/resolvers": "^3.3.2",
        "@json2csv/node": "^7.0.3",
        "@prisma/client": "^6.19.0",
        "@radix-ui/react-alert-dialog": "^1.1.15",
        "@radix-ui/react-aspect-ratio": "^1.1.7",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-navigation-menu": "^1.2.14",
        "@radix-ui/react-popover": "^1.1.15",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-switch": "^1.2.6",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-toast": "^1.2.15",
        "@radix-ui/react-tooltip": "^1.2.8",
        "@react-email/components": "^0.0.11",
        "@react-email/render": "^0.0.9",
        "@react-email/tailwind": "^0.0.12",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "20.6.2",
        "@vercel/analytics": "^1.1.1",
        "autoprefixer": "10.4.15",
        "bcryptjs": "^3.0.3",
        "chart.js": "^4.5.1",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "cors": "^2.8.5",
        "dexie": "^4.2.1",
        "dotenv": "^17.2.3",
        "jsonwebtoken": "^9.0.2",
        "lucide-react": "^0.279.0",
        "mongoose": "^8.19.2",
        "next": "^15.3.3",
        "next-intl": "^4.1.0",
        "next-pwa": "^5.6.0",
        "next-themes": "^0.2.1",
        "nodemailer": "^7.0.10",
        "number-to-words": "^1.2.4",
        "postcss": "8.4.31",
        "prisma": "^6.19.0",
        "puppeteer-core": "^24.9.0",
        "react": "18.2.0",
        "react-chartjs-2": "^5.3.1",
        "react-day-picker": "^8.8.2",
        "react-dom": "18.2.0",
        "react-email": "^4.0.16",
        "react-hook-form": "^7.46.1",
        "react-signature-canvas": "^1.0.6",
        "react-use-wizard": "^2.2.4",
        "sharp": "^0.33.0",
        "tailwind-merge": "^1.14.0",
        "tailwindcss": "3.3.5",
        "tailwindcss-animate": "^1.0.7",
        "twilio": "^5.10.5",
        "typescript": "5.2.2",
        "use-debounce": "^10.0.0",
        "xlsx": "^0.18.5",
        "xml2js": "^0.6.2",
        "zod": "^3.22.2"
    },
    "build": {
        "appId": "com.shreeniyaa.chitfunds.invoify",
        "productName": "Invoify - Chit Fund Management System",
        "directories": {
            "output": "release"
        },
        "files": [
            "electron/main-simple.js",
            "electron/preload.js",
            ".next/standalone/**/*",
            "public/**/*",
            "!src",
            "!scripts",
            "!*.md",
            "!release",
            "!node_modules/serialport/**/*",
            "!node_modules/@serialport/**/*",
            "!node_modules/electron/**/*",
            "!node_modules/electron-builder/**/*",
            "!node_modules/electron-reload/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "public/favicon.ico",
            "requestedExecutionLevel": "asInvoker",
            "verifyUpdateCodeSignature": false,
            "forceCodeSigning": false,
            "signAndEditExecutable": false,
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "asar": true,
            "asarUnpack": [
                "**/*.node",
                "**/*.dll",
                ".next/standalone/**/*",
                "node_modules/**/*"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "public/favicon.ico",
            "uninstallerIcon": "public/favicon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Invoify",
            "perMachine": false,
            "runAfterFinish": true,
            "displayLanguageSelector": false,
            "warningsAsErrors": false,
            "removeDefaultUninstallWelcomePage": false,
            "installerHeaderIcon": "public/favicon.ico",
            "deleteAppDataOnUninstall": false,
            "menuCategory": "Office\\Financial",
            "guid": "a74f865d-5c91-4385-b9a8-9a8b6f8b5e1c"
        },
        "extraMetadata": {
            "main": "electron/main-simple.js",
            "author": {
                "name": "Shree Eniyaa Chitfunds Private Limited",
                "email": "support@shreeniyaa.com"
            },
            "description": "Professional chit fund and invoice management system for financial businesses",
            "homepage": "https://shreeniyaa.com"
        }
    },
    "devDependencies": {
        "@next/bundle-analyzer": "^14.0.4",
        "@sparticuz/chromium": "138.0.2",
        "@types/dexie": "^1.3.32",
        "@types/nodemailer": "^6.4.14",
        "@types/number-to-words": "^1.2.1",
        "@types/react": "^18.2.22",
        "@types/react-dom": "^18.2.7",
        "@types/react-signature-canvas": "^1.0.4",
        "@types/xml2js": "^0.4.13",
        "concurrently": "^9.2.1",
        "cross-env": "^7.0.3",
        "electron": "^39.2.0",
        "electron-builder": "^26.0.12",
        "electron-packager": "^17.1.2",
        "electron-reload": "^2.0.0-alpha.1",
        "eslint": "9.39.0",
        "eslint-config-next": "16.0.1",
        "express": "^5.1.0",
        "firebase": "^12.5.0",
        "ignore-loader": "^0.1.2",
        "node-fetch": "^3.3.2",
        "puppeteer": "^24.10.0",
        "tsx": "^4.20.6",
        "wait-on": "^9.0.3"
    }
}
